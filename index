    <script>
        // State Management
        let currentViewId = 'q1';
        let historyStack = [];

        function nextQuestion(targetId, progress) {
            historyStack.push(currentViewId);
            document.getElementById(currentViewId).classList.remove('active');
            currentViewId = targetId;
            document.getElementById(targetId).classList.add('active');
            updateProgress(progress);
            document.getElementById('backBtn').style.display = 'block';
        }

        function showResult(resultId) {
            historyStack.push(currentViewId);
            document.getElementById(currentViewId).classList.remove('active');
            currentViewId = resultId;
            document.getElementById(resultId).classList.add('active');
            updateProgress(100);
            document.getElementById('mainHeader').style.display = 'none';
            document.getElementById('backBtn').style.display = 'none';
        }

        function goBack() {
            if (historyStack.length === 0) return;
            document.getElementById(currentViewId).classList.remove('active');
            const previousId = historyStack.pop();
            currentViewId = previousId;
            document.getElementById(previousId).classList.add('active');

            if (historyStack.length === 0) {
                updateProgress(0);
                document.getElementById('backBtn').style.display = 'none';
            } else {
                updateProgress(50);
            }
            document.getElementById('mainHeader').style.display = 'block';
        }

        function restart() {
            document.getElementById(currentViewId).classList.remove('active');
            historyStack = [];
            currentViewId = 'q1';
            document.getElementById('q1').classList.add('active');
            updateProgress(0);
            document.getElementById('backBtn').style.display = 'none';
            document.getElementById('mainHeader').style.display = 'block';
        }

        function updateProgress(percent) {
            document.getElementById('progressFill').style.width = percent + '%';
        }
    </script>
