<script>
    let currentViewId = 'q1';
    let historyStack = [];

    function nextQuestion(id, progress) {
        historyStack.push(currentViewId);
        document.getElementById(currentViewId).classList.remove('active');
        currentViewId = id;
        document.getElementById(id).classList.add('active');
        updateProgress(progress);
        backBtn.style.display = 'block';
    }

    function showResult(id) {
        historyStack.push(currentViewId);
        document.getElementById(currentViewId).classList.remove('active');
        currentViewId = id;
        document.getElementById(id).classList.add('active');
        updateProgress(100);
        mainHeader.style.display = 'none';
        backBtn.style.display = 'none';
    }

    function goBack() {
        if (!historyStack.length) return;
        document.getElementById(currentViewId).classList.remove('active');
        currentViewId = historyStack.pop();
        document.getElementById(currentViewId).classList.add('active');
        updateProgress(historyStack.length ? 50 : 0);
    }

    function updateProgress(p) {
        document.getElementById('progressFill').style.width = p + '%';
    }
</script>
